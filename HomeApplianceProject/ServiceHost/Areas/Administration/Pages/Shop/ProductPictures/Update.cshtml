@model ShopManagement.Application.Contracts.ProductPicture.UpdateProductPicture
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش تصویر محصول جدید:@Model.PictureAlt</h4>
</div>

<form asp-page="./Index" asp-page-handler="Update"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
        <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProductID" class="control-label">کد</label>
                    <select class="form-control" asp-for="ProductID" asp-items='new SelectList(@Model.Products,"ID","Name")'>
                        <option value="0"> محصول</option>
                    </select>
                    <span asp-validation-for="ProductID" class="error"></span>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="PictureSource" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="PictureSource" accept="image/*">
                    @*<span asp-validation-for="PicSrc" class="error"></span>*@
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    @*<span asp-validation-for="PicAlt" class="error"></span>*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان عکس</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    @*<span asp-validation-for="PicTitle" class="error"></span>*@
                </div>
            </div>
            <input type="hidden" asp-for="ID" value="@Model.ID" />
        </div>
        
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
</form>
