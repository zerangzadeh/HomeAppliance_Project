@model ShopManagement.Application.Contracts.Product.UpdateProduct
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش محصول: @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Update"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')>
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code" class="control-label">کد</label>
                    <input type="text" class="form-control" asp-for="Code">
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">گروه محصول</label>
                    <select class="form-control" asp-for="CategoryId"
                            asp-items='new SelectList(Model.Categories, "ID", "Title")'>
                        <option value="0">گروه محصول</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="PicSrc" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="PicSrc" accept="image/*">
                    <span asp-validation-for="PicSrc" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PicAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PicAlt">
                    <span asp-validation-for="PicAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PicTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="PicTitle">
                    <span asp-validation-for="PicTitle" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="ShortDESC" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="ShortDESC" onchange="fillField('ShortDESC', 'MetaDESC')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="ShortDESC" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Keywords" >
                    <span asp-validation-for="Keywords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDESC" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDESC"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDESC" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="ID" value="@Model.ID" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>